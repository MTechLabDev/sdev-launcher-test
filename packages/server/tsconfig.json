{
    "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node22/tsconfig"],
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "esnext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "@root/*": ["./*"]
        },
        "exactOptionalPropertyTypes": false
    }
}
